---
import CategoryLink from "./CategoryLink.astro";
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";
const { post } = Astro.props;
---
        <div class="p-4 md:w-1/3 w-full">
          <div class="h-full border-2 border-gray-200 border-opacity-60 overflow-hidden">
            { 
                post.data.cover && <Image class="lg:h-48 h-36 md:h-36 w-full object-cover object-center" src={post.data.cover} width=305 height=192 alt="blog" />

            }
            <div class="p-6">
              <CategoryLink post={post} />
              <a href={post.slug} class="text-gray-900 hover:underline hover:text-wedgewood-500">
              <h1 class="title-font text-lg font-medium mb-3">{ post.data.title }</h1>
              </a>
              <p class="leading-relaxed mb-3">{ post.data.description }</p>
              <p class="text-right">
                <FormattedDate date={post.data.date} />
              </p>
            </div>
          </div>
        </div>
        