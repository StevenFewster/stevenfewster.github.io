---
import CategoryLink from "./CategoryLink.astro";
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";
const { post } = Astro.props;
let imageClass = 'lg:h-48 h-36 md:h-36 w-full '
imageClass += ['Book', 'Book Review'].includes(post.data.type) ?
  ' object-contain custom-bg' :
  ' object-center object-cover';
---
        <div data-cmp="card-long" class="p-4 md:w-1/3 w-full">
          <div class="h-full border-2 border-gray-200 border-opacity-60 flex flex-col">
            { 
                post.data.cover && <Image class={ imageClass } src={ post.data.cover } width=305 height=192 alt="blog" />
            }
            <div class="p-6 flex flex-col">
              <CategoryLink post={post} />
              
              <a href={post.slug} class="text-gray-900 hover:underline hover:text-wedgewood-500">
              <h1 class="title-font text-lg font-medium mb-3">{ post.data.title }{ post.data.type }</h1>
              </a>
              <p class="leading-relaxed mb-3 flex-grow-1">{ post.data.description }</p>
              <p class="text-right mt-auto">
                <FormattedDate date={post.data.date} />
              </p>
            </div>
          </div>
        </div>
        